<UserControl x:Class="AndrewMyhre.com._2010.tv_loading"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="Black">
        <TextBlock Opacity="0"  Text="loading..." x:Name="loadingText" Foreground="White" FontFamily="Georgia" FontSize="80" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock.Effect>
                <BlurEffect x:Name="blurEffect" Radius="100" />
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>
